# Server Environment Configuration

# Node environment
NODE_ENV=development

# Server binding
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# CORS origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# JWT secrets (change these in production!)
JWT_ACCESS_SECRET=change-me-access-secret-production
JWT_REFRESH_SECRET=change-me-refresh-secret-production

# JWT TTL
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Cookie settings
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Database
DATABASE_URL=postgresql://postgres:<PASSWORD>@localhost:5432/applications_and_events?schema=public

# Logging
LOG_LEVEL=debug

# Observability / Cache
REDIS_URL=redis://localhost:6379

# Cache TTL (seconds)
CACHE_TTL_SHORT=30
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600
